{
  "name": "backend-metering",
  "version": "1.0.0",
  "description": "Backend for Metering Mercury 206 + WRX",
  "scripts": {
    "test": "cross-env NODE_ENV=test mocha --no-warnings --ignore=node_modules/** **/*.test.js",
    "dev": "cross-env NODE_ENV=development nodemon --watch src --exec node src/index.js",
    "build": "esbuild src/index.js --bundle --platform=node --outfile=dist/index.js --sourcemap --external:node_modules/*",
    "start": "node dist/index.js",
    "docker-compose:dev": "docker compose -f docker-compose.yaml -f docker-compose.dev.yaml up --build",
    "docker-compose:prod": "docker compose -f docker-compose.yaml -f docker-compose.prod.yaml up --build"
  },
  "keywords": [],
  "author": "Andrew Kazanin",
  "type": "module",
  "main": "dist/index.js",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^24.0.10",
    "chai": "^5.2.0",
    "colors": "^1.4.0",
    "esbuild": "^0.21.3",
    "eslint": "^9.29.0",
    "eslint-config-google": "^0.14.0",
    "eslint-import-resolver-webpack": "^0.13.10",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "faker": "^6.6.6",
    "husky": "^9.1.7",
    "mocha": "^11.7.0",
    "node-notifier": "^10.0.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3"
  },
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "@koa/router": "^13.1.0",
    "axios": "^1.10.0",
    "config": "^4.0.0",
    "cross-env": "^7.0.3",
    "jsonwebtoken": "^9.0.2",
    "koa": "^3.0.0",
    "koa-bodyparser": "^4.4.1",
    "koa-compose": "^4.1.0",
    "koa-favicon": "^2.1.0",
    "koa-logger": "^4.0.0",
    "koa-passport": "^6.0.0",
    "koa-proxies": "^0.12.4",
    "koa-router": "^13.0.1",
    "koa-session": "^7.0.2",
    "koa-static": "^5.0.0",
    "latest-version": "^9.0.0",
    "lodash": "^4.17.21",
    "mongoose": "^8.16.0",
    "mongoose-beautiful-unique-validation": "^7.1.1",
    "nodemailer": "^7.0.3",
    "nodemailer-html-to-text": "^3.2.0",
    "nodemailer-smtp-transport": "^2.7.4",
    "nodemailer-stub-transport": "^1.1.0",
    "passport-jwt": "^4.0.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "uuid": "^11.1.0"
  }
}
